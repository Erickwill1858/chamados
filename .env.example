APP_NAME=Chamados
APP_KEY=

# Em produção é desejável APP_ENV=production e APP_DEBUG=false
APP_ENV=local
APP_DEBUG=true

APP_URL=http://127.0.0.1:8000

# O php.ini tem de permitir esse tamanho também
# Definir o parâmetro em MB, o padrão é 16MB (se não estiver definido valor algum)
APP_UPLOAD_MAX_FILESIZE = 16M

# codpes dos admins do sistema
ADMINS=10001,20001

# false or true
USAR_REPLICADO=true

# Personalizacao do theme
USP_THEME_SKIN=

LOG_CHANNEL=stack

# Testado em mysql e sqlite
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Em teste pode usar MAIL_DRIVER=log
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Credenciais para senha unica
SENHAUNICA_KEY=fflch_sti
SENHAUNICA_SECRET=
SENHAUNICA_CALLBACK_ID=1
#SENHAUNICA_DEV="http://localhost:8001/wsusuario/oauth"

# admins
ADMINS=10001,20001

#skins (requer LARAVEL-USP-THEME v2)
